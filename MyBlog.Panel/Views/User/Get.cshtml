@model MyBlog.DTO.UserDTO
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Kullanıcılar</h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Kullanıcı Detayı</h2>

                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p>  Kayıtlı Kullanıcı Detayı</p>
                        <table id="datatable-myblog" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>Şehir</th>
                                    <th>ilçe</th>
                                    <th>E-posta</th>
                                    <th>Kullanıcı Tipi</th>
                                    <th>Katılma Tarihi</th>
                                    <th>Kullanıcı Durumu</th>

                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td>@Model.FirstName</td>
                                    <td>@Model.LastName</td>
                                    <td>@Model.CityName</td>
                                    <td>@Model.TownName</td>
                                    <td>@Model.EmailAddress</td>
                                    <td>@Model.UserTypeName</td>
                                    <td>@Model.CreatedDate.ToShortDateString()</td>
                                    <td>@Model.RecordStatusName</td>
                                    <td><a href="/User/Get/@Model.UserId" class="btn btn-danger">İptal</a></td>
                                    <td><a href="/User/Edit/@Model.UserId" class="btn btn-success">Düzenle</a></td>
                                </tr>

                            </tbody>
                        </table>
                        <div class="ln_solid"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


